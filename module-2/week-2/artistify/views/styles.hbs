<h1 class="title">Styles manager</h1>


<button id="btn-fetch-styles">fetch styles</button>
<button id="btn-display-form-style">post style</button>


<span id="form-post-style" class="form row is-hidden">
    <input id="new-style-name" class="input" type="text">
    <input id="new-style-color" class="input" type="color">
    <button id="btn-post-style" class="btn">create</button>
</span>

<span id="form-edit-style" class="form row">
    <input id="update-style-name" class="input" type="text">
    <input id="update-style-color" class="input" type="color">
    <button id="btn-update-style" class="btn">update</button>
</span>

<hr>

<ul id="list-styles" class="list">
    {{#each styles}}
    <li class="row style">
        <span class="infos">
            <span class="color-code" style="background: {{this.color}}"></span>
            <span>{{this.name}}</span>
        </span>
        <span class="btns">
            <i data-style-id="{{this._id}}" class="fa fa-edit"></i>
            <i data-style-id="{{this._id}}" class="fa fa-trash"></i>
        </span>
    </li>
    {{/each}}
</ul>